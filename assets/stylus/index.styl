html
body
  min-width 770px
  font-family Roboto
  word-spacing 1px
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  box-sizing border-box

html
body
ul
  padding 0
  margin 0
  color $color-text
  line-height 1.2

.u-bb
  position relative
  &:after
    bottom 0
    content ' '
    position absolute
    left 0
    width 100%
    height 1px
    z-index 0
    transition all .2s
    background #EFEFEF
    transform scaleY(0.5)
    transform-origin 50%100%

.u-mb10
  margin-bottom 10px !important

.u-mr10
  margin-right 10px !important

.el-message
  top 10px !important

.el-popover
  min-width 50px

.el-form-item
  margin-bottom 0 !important
  padding 10px 0

.el-form-item__content
  display flex

.el-select-dropdown__item
  font-family $font
  &.selected
    color $color-main

.nuxt-progress
  position fixed
  top 0
  border-width 5px 0 0
  border-top-style solid
  border-image linear-gradient(139deg, #fb8817, #ff4b01, #c12127, #e02aff) 3
  z-index 99999999
