html
body
ul
  padding 0
  margin 0
  color $color-text
  line-height 1.2

.u-bb
  position relative
  &:after
    bottom 0
    content ' '
    position absolute
    left 0
    width 100%
    height 1px
    z-index 0
    transition all .2s
    background #EFEFEF
    transform scaleY(0.5)
    transform-origin 50%100%

.u-mb10
  margin-bottom 10px !important

.u-mr10
  margin-right 10px !important

.el-message
  top 10px !important

.el-popover
  min-width 50px
